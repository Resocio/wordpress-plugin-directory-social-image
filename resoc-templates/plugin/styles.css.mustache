.wrapper {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  font-family: Roboto;
  background-color: white;
}

main {
  flex: 10;
  display: flex;
  align-items: top;

  padding-top: 12vh;
  padding-left: 10vh;
  padding-right: 10vh;
}

.project {
  flex: 3;
}

.title {
  margin-top: 0;
  font-size: 7vh;
  font-weight: 600;
  color: #32373C;
  line-height: 9vh;

  padding-right: 25vw;
  margin-bottom: 0;
}

.project-name {
  font-weight: bold;
}

.description {
  margin-top: 6.4vh;
  font-size: 5.4vh;
  color: #666;
  line-height: 7vh;
  padding-right: 16vw;
}

.pic img {
  max-width: 22vh;
  width: 100%;
  height: auto;
}

.secondary {
  flex: 5.5;

  display: flex;
  padding-left: 10vh;
  padding-right: 10vh;
  justify-content: space-between;
  align-items: center;
}

.metrics {
  display: flex;
  flex-direction: row;
  gap: 8vh;
}

.metric {
  display: flex;
  align-items: start;
  gap: 2vh;
  color: #71747f;
}

.metric img {
  height: 5.3vh;
}

.metric-data {
  margin: 0;
  font-size: 4vh;
  line-height: 5.3vh;
  font-weight: bold;
  color: #32373C;
}

.metric-label {
  margin: 0;
  margin-top: 0.5vh;
  font-size: 3vh;
}

.wordpress-logo {
  text-align: right;
  padding-right: 6.5vh;
}

.wordpress-logo img {
  width: 9vh;
  height: 9vh;
}

.techs {
  flex: 0.8;
  display: flex;
  background: linear-gradient(65.59deg, #0073AA 19.76%, #00A0D2 79.63%);
}
